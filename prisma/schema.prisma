generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id String @id @default(uuid())

  email    String          @unique
  password String
  files    FilesUploaded[]

  @@index([email])
}

model FilesUploaded {
  id           String @id @default(uuid())
  uploadedBy   User   @relation(fields: [uploadedById], references: [id])
  uploadedById String
}
